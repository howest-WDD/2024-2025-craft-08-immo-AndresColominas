{% extends '_shared/_layout.twig' %}

{% block main %}

    <!-- Homes for you -->
    <div class="container c-section ">
        <!-- laad de titel en subtext in via de entry -->
        <h2 class="c-section__title">{{ entry.title }}</h2>
        <p class="c-section__subtitle">{{ entry.subtext }}</p>

        <div class="row g-4 justify-content-center c-section__content">
            <!-- category card -->
            <div class="col-12 col-sm-6 col-lg-4 c-categories__card">
                <!-- laad de titel en image in via de entry -->
                <div class="c-categories__info">
                    <h3 class="c-categories__title">{{ entry.title }}</h3>
                    <p class="">2 properties</p>
                </div>
                <div class="c-categories__imgcontainer">
                    <img src="{{ entry.cover.one().url }}" alt="{{ entry.title }}" class="c-categories__img c-categories__img--page">
                </div>
            </div>

            <!-- roep alle entries van de section 'houses' op die 'relatedTo' de entry zijn. Loop over deze entries en vul de immo-cards dynamisch in (zie templates/index.twig hiervoor) -->
            {% set houses = craft.entries.section('house').relatedTo(entry).all() %}
            {% for house in houses %}
                <!-- immo card -->
                <div class="col-12 col-sm-6 col-lg-4">
                    <a href="{{ house.url }}" class="c-immo-card">
                        <div class="c-immo-card__imgcontainer">
                            <img src="{{ house.cover.one().url() }}" alt="" class="c-immo-card__img">
                            <div class="c-immo-card__tag {{ house.state == 'rent' ? 'c-immo-card__tag--rent' : 'c-immo-card__tag--sale' }}">
                                <p>For {{ house.state }}</p>
                            </div>
                        </div>
                        <div class="c-immo-card__infocontainer">
                            <div class="c-immo-card__heading">
                                <h3 class="c-immo-card__title">{{ house.title }}</h3>
                                <p class="c-immo-card__price">{{ house.price|money }}</p>
                            </div>
                            <div class="c-immo-card__location">
                                <img src="{{ url('img/icons/location.svg') }}" alt="">
                                <p>{{ house.location }}</p>
                            </div>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}